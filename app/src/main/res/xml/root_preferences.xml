<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/study_header">

        <Preference
            app:key="wordsPerDay"
            app:title="每日新词数目"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <Preference
            app:key="sync_setting"
            app:title="同步设置"
            app:summary="同步用户设置"/>

        <Preference
            app:key="sync_data"
            app:title="同步数据"
            app:summary="同步学习进度"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <Preference
            app:key="cleanData"
            app:title="清理所有数据!"/>

        <Preference
            app:key="exitLogin"
            app:title="退出登录"/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
